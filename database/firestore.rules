rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only access their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // User's farms
      match /farms/{farmId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
      
      // User's predictions
      match /predictions/{predictionId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
